<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bit.academy.mapper.MemberMapper">

    <!-- Member Regist-->
    <insert id = "regist"
            parameterType="com.bit.academy.model.MemberVO"
            useGeneratedKeys="true"
            keyProperty="m_no">
        <![CDATA[
            INSERT INTO member(
                m_name, m_id, m_password, m_phone
                )
            VALUES (
                #{m_name}, #{m_id}, password(#{m_password}), #{m_phone}
                )
        ]]>
    </insert>
     <!-- Member modification-->
    <insert id ="updateMember" parameterType="com.bit.academy.model.MemberVO">
        UPDATE member
        SET
            m_name = #{m_name},
            m_id = #{m_id},
            m_password = #{m_password},
            m_phone = #{m_phone},
            m_address = #{m_address},
            m_birth = #{m_birth}
        WHERE m_no = #{m_no}
    </insert>
    <!-- Member delete-->
    <delete id = "deleteMember" parameterType="int">
        DELETE FROM member where m_no = #{m_no}
    </delete>

    <!--Member select-->
    <select id = "selectMember" parameterType="Integer" resultType="com.bit.academy.model.MemberVO" >
    SELECT *
    FROM member
    WHERE m_no = #{m_no}
    </select>

    <!-- Member list -->
    <select id = "selectMemberList" resultType="com.bit.academy.model.MemberVO">
        SELECT
            m_name, m_id, m_phone, m_address, m_birth
        FROM member
        ORDER BY m_no DESC
    </select>

    <!--login-->
    <select id = "login" parameterType="com.bit.academy.model.MemberVO" resultType="com.bit.academy.model.MemberVO">
        SELECT
            *
        from member
        where m_id = #{m_id}
        and m_password = password(#{m_password})
    </select>

    <!--idFind-->

    <select id = "idFind" parameterType="com.bit.academy.model.MemberVO" resultType="com.bit.academy.model.MemberVO">
        SELECT m_id
        FROM member
        WHERE m_name = #{m_name}
        AND m_phone = #{m_phone}
    </select>

    <!--pwFind-->

    <select id = "pwFind" parameterType="com.bit.academy.model.MemberVO" resultType="com.bit.academy.model.MemberVO">
        SELECT m_password
        FROM member
        WHERE m_id = #{m_id}
        AND m_phone = #{m_phone}
    </select>

</mapper>